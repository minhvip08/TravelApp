<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_travel_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_travel_app_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.DetailHotelActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChatAiActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SearchLocationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.StartActivity"
            android:exported="false" />
        <activity
            android:name=".ui.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ItineraryArrangementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SetPeriodActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_api" />

        <activity
            android:name=".ui.MapActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.EmailConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AuthenticationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChooseHotelActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TravelArrangementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LocationDetailActivity"
            android:exported="false" />
    </application>

</manifest>