<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_slider"
        android:src="@drawable/start_page_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_slider"
        android:text="@string/title_page_1"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_slider"
        android:text="@string/desc_page_1"
        android:textAlignment="center"
        android:textAppearance="@style/text_medium"
        android:layout_gravity="center"
        android:alpha="0.7"
        android:layout_marginTop="20dp"/>

</LinearLayout>