<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:backgroundTint="#3369FF"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:id="@+id/left_chat_layout"
        android:background="@drawable/search_view_background"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/left_chat_text_view"
            android:textAppearance="@style/text_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:backgroundTint="#656565"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:id="@+id/right_chat_layout"
        android:layout_alignParentEnd="true"
        android:background="@drawable/search_view_background"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text_view"
            android:textColor="#EEEEEE"
            android:textAppearance="@style/text_medium"/>
    </LinearLayout>

</RelativeLayout>