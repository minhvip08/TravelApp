<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/layout_article"
    android:padding="16dp"
    android:layout_marginVertical="15dp">

    <TextView
        android:id="@+id/article_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/text_small"/>

    <TextView
        android:id="@+id/article_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_item_author"
        android:layout_toStartOf="@id/article_item_thumbnail"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/text_medium"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="3"/>

    <ImageView
        android:id="@+id/article_item_thumbnail"
        android:src="@color/black"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>