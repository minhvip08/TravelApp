<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/tab_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_item_title_placeholder"
        android:textAppearance="@style/schedule_header" />

    <TextView
        android:id="@+id/tab_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_item_date_placeholder"
        android:textAppearance="@style/tab_item_date" />


</LinearLayout>