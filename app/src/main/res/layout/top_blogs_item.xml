<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="142dp"
    android:layout_height="200dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_view_background"
    android:src="@drawable/western"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Western Strait"
        android:id="@+id/top_blogs_name"
        android:textColor="@color/white"
        android:layout_above="@id/top_blogs_count"
        android:textAppearance="@style/text_medium"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="16 locations"
        android:id="@+id/top_blogs_count"
        android:textColor="@color/white"
        android:textAppearance="@style/text_small"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"/>



</RelativeLayout>