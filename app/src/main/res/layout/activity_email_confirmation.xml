<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EmailConfirmationActivity"
    android:gravity="center"
    android:paddingHorizontal="48dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_email_confirmation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_email_22"/>

    <TextView
        android:id="@+id/text_email_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_confirmation_verify"
        android:textAppearance="@style/text_medium"
        android:textAlignment="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_return"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary"
        android:layout_marginTop="27dp"
        android:textAppearance="@style/button_text_appearance"
        android:text="@string/button_return"/>

</LinearLayout>