<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LocationDetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/switzerland"
        android:id="@+id/image_view_detail_activity"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26000000"
        android:padding="24dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar_layout_detail_activity"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/enter_plan_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_blur"
                android:backgroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Enter Plan"
                android:textAppearance="@style/text_medium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/add_to_plan_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_white"
                android:backgroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Add to Plan"
                android:textAppearance="@style/text_medium"

                android:textColor="@color/black" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_layout"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rectangle_blur"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/baseline_thumb_up_24"
            android:paddingHorizontal="32dp"
            android:textAppearance="@style/text_medium"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/attraction_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rating_button"
            android:layout_marginBottom="16dp"
            android:text="Blue Lagoon Drive from ReykjavÃ­k, the capital of Iceland, to the southeast for about an hour, you can reach Blue Lagoon, the famous"
            android:textAppearance="@style/text_medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/attraction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/attraction_description"
            android:layout_marginBottom="16dp"
            android:text="Blue Lagoon"
            android:textAppearance="@style/text_large"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>