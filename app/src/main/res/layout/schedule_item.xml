<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/schedule_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/blue"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circular">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="22dp"
        android:text="@string/schedule_name"
        android:textColor="@color/white"
        android:textAppearance="@style/text_almost_large"/>

    <TextView
        android:id="@+id/schedule_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_below="@id/schedule_name"
        android:textAppearance="@style/text_medium"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/schedule_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_below="@id/schedule_date"
        android:textAppearance="@style/text_medium"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/schedule_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_below="@id/schedule_hotel_name"
        android:textAppearance="@style/text_medium"
        android:textColor="@color/white"
        android:layout_marginBottom="22dp"/>

</RelativeLayout>