<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/day_item_timer_outline"
        android:gravity="center"
        android:id="@+id/linear_layout_timer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background=""
            android:src="@drawable/ic_clock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30"
            android:textAppearance="@style/text_large_title"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_view_timer"/>


    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@id/linear_layout_timer"
        android:textAppearance="@style/text_medium"
        android:textStyle="bold"
        android:background="@drawable/day_item_description_outline"
        android:text="Breakfast"/>


</RelativeLayout>