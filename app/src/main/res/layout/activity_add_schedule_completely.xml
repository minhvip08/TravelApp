<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddScheduleCompletelyActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/add_schedule_completely"
        android:scaleType="centerCrop"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Return to Home"
        android:textColor="@color/white"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/btn_return_home"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completely"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:layout_above="@+id/btn_return_home"
        android:layout_alignLeft="@+id/btn_return_home"
        android:id="@+id/completely_text_view"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Schedule"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_above="@+id/completely_text_view"
        android:layout_alignLeft="@+id/completely_text_view"
        android:id="@+id/add_schedule_text_view" />

</RelativeLayout>